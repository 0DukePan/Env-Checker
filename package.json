{
  "name": "env-checker",
  "version": "1.0.0",
  "description": "Advanced environment file security scanner for VS Code",
  "main": "dist/core/index.js",
  "types": "dist/core/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "tsc --watch",
    "lint": "eslint src/**/*.ts extension/src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts extension/src/**/*.ts --fix",
    "prepare": "npm run build"
  },
  "keywords": ["security", "environment", "vscode", "scanner"],
  "author": "Pan",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
